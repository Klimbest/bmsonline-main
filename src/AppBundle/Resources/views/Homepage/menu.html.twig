{# src/kb/BmsBundle/Resources/views/Homepage/menu.html.twig #}
{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}- Wybierz obiekt -{% endblock %}

{% block sidebar %}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row main-row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2>
                        <span class="label label-default label-info">Wybierz obiekt</span>
                    </h2>
                </div>
            </div>
            <div class="row">
                {% if app.user.targets|length > 0 %}
                    {% for target in app.user.targets %}
                        <div class="col-md-4">
                            <div class="well target">
                                <h4>
                                    <span class="label label-default label-info">
                                        {{ target.name|length > 30 ? target.name|slice(0, 30) ~ '...' : target.name }}
                                    </span>
                                </h4>
                                <div class="row">
                                    {#<a href="{{path( 'app_bms_target', {'target_id': target.id})}}">#}
                                        <img src="{{ asset(['/images/', target.id, '/thumb.jpg'] | join) }}" class="img-responsive" />
                                    {#</a>#}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
            </div>
                <div class="row text-center">
                    <h3>Nie masz dostępu do żadnego obiektu, skontaktuj się z administratorem obiektu.</h3>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}